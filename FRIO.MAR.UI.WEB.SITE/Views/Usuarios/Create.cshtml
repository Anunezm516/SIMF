@*@model FRIO.MAR.UI.WEB.SITE.Models.UsuariosModel*@
@model FRIO.MAR.APPLICATION.CORE.DTOs.AppServices.UsuariosAppResultDto
@{
    ViewBag.Title = "Usuarios";
    ViewBag.pTitle = "Usuarios";
    ViewBag.pageTitle = "Create";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Usuario" class="control-label">Usuario <span class="text-danger">*</span></label>
                        <input asp-for="Usuario" class="form-control" autofocus  />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="Nombre" class="form-control"  />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label">Apellido <span class="text-danger">*</span></label>
                        <input asp-for="Apellido" class="form-control"  />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="CorreoElectronico" class="control-label">Correo Electronico <span class="text-danger">*</span></label>
                        <input asp-for="CorreoElectronico" class="form-control"  />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Telefono </label>
                        <input asp-for="Telefono" class="form-control"  />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="IdTelegram" class="control-label">Id Telegram </label>
                        <input asp-for="IdTelegram" class="form-control"  />
                        <span asp-validation-for="IdTelegram" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="IdRol">Rol <span class="text-danger">*</span></label>
                        <select asp-for="IdRol" class=" form-control"
                                asp-items="ViewBag.rol">
                            <option value="" selected disabled>Elige un Rol...</option>
                        </select>
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Crear Usuario" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            
        });
    </script>
    @Html.Raw(TempData["msg"])
}