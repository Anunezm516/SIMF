
@using FRIO.MAR.APPLICATION.CORE.Constants;
@*@using FRIO.MAR.UI.WEB.SITE.Parameters*@
@*@using System.Text;*@


@model FRIO.MAR.UI.WEB.SITE.Models.UsuarioCambioClave


@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<!DOCTYPE html>

<html>
<body class="full-width page-condensed fondoInicio">
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary bg-soft">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Welcome Back !</h5>
                                        <p>Sign in to continue to Skote.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="login-wrapper">
                            <div class="popup-header" style="background: #1D76BB;">
                            </div>
                            <div class="popup-header" style="background: #B1D137;color:white;padding: 5px 5px 5px 5px;text-align:center">
                                <span class="text-semibold">
                                    Por motivo de seguridad, cambie su contraseña
                                </span>
                            </div>
                            <form asp-action="ChangePassword" method="post" autocomplete="off">
                                <div class="p-2">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group has-feedback">
                                        <label>
                                            Ingrese su contraseña actual
                                        </label>
                                        <div ID="UpdatePanel4">
                                            <input type="password" asp-for="ClaveActualConfirma" Class="form-control" placeholder="Contraseña actual" required>
                                            <span asp-validation-for="ClaveActualConfirma" class="text-danger"></span>
                                        </div>
                                        <span class="glyphicon glyphicon-lock form-control-feedback" />
                                    </div>
                                    <br />
                                    <div class="form-group has-feedback">
                                        <label>
                                            Ingrese su nueva contraseña
                                        </label>
                                        <div ID="UpdatePanel4">
                                            <input type="password" asp-for="ClaveNueva" Class="form-control" placeholder="Contraseña nueva" required>
                                            <span asp-validation-for="ClaveNueva" class="text-danger"></span>
                                        </div>
                                        <span class="glyphicon glyphicon-lock form-control-feedback" />
                                    </div>
                                    <br />
                                    <div class="form-group has-feedback">
                                        <label>
                                            Confirme su nueva contraseña
                                        </label>
                                        <div ID="UpdatePanel4">
                                            <input type="password" asp-for="ClaveNuevaConfirma" Class="form-control" placeholder="Confirme contraseña nueva" required>
                                            <span asp-validation-for="ClaveNuevaConfirma" class="text-danger"></span>
                                        </div>
                                        <span class="glyphicon glyphicon-lock form-control-feedback" />
                                    </div>
                                    <br />
                                    <div class='form-group text-center'>
                                        <div class="row">
                                            <div class="form-group text-center">
                                                <button Id="BtnConfirmar" type="submit" class="btn btn-info btn-block btn-login">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <div>
                        <p>
                            <partial name="../Shared/_Footer" />
                            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                            <script src="~/js/bootstrap.bundle.min.js"></script>
                            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
